@model RodeoDrive.Domain.Entities.Cart

@{
    Layout = null;
}

<div id="cart">
    <span class="caption">
        <b>Ваш кошик:</b>
        @Model.Lines.Sum(x => x.Quantity) найменувань,
        @Model.ComputeTotalValue().ToString("c")
    </span>

    @Html.ActionLink("Оформити замовлення", "Index", "Cart", new { returnUrl = Request.Url.PathAndQuery }, null)
</div>